							"pm.test(\"Body contains access token\", function () {\r",
							"    pm.expect(pm.response.text()).to.include(\"access_token\");\r",
							"});\r",
							"\r",
							"pm.test(\"1.access token type = bearer; 2. token lives 17800\", function () {\r",
							"    var jsonData = pm.response.json();\r",
